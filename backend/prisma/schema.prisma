generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int     @id @default(autoincrement())
  nombre     String
  apellido   String
  email      String  @unique
  contrasena String
  direccion  String
  rol        String 
}

model Producto {
  id              Int            @id @default(autoincrement())
  nombre          String
  descripcion     String
  clasificacion   String
  precio          Float
  stock           Int
  imagen          String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  tipoProductoId  Int
  tipoProducto    TipoProducto   @relation(fields: [tipoProductoId], references: [id])
}

model TipoProducto {
  id    Int     @id @default(autoincrement())
  nombre String @unique
  productos Producto[]
}

